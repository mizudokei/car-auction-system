<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>入札ページ</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script>
        function incrementValue(id, step) {
            let value = parseInt(document.getElementById(id).value, 10);
            value = isNaN(value) ? 0 : value;
            value += step;
            document.getElementById(id).value = value;
        }

        function decrementValue(id, step) {
            let value = parseInt(document.getElementById(id).value, 10);
            value = isNaN(value) ? 0 : value;
            value -= step;
            if(value < parseInt(document.getElementById(id).min, 10)) value = document.getElementById(id).min; 
            document.getElementById(id).value = value;
        }

        // 残り時間を更新する関数
        function updateTimeRemaining(endTime) {
            const timerElement = document.getElementById('timeRemaining');
            const endDate = new Date(endTime);
            
            setInterval(() => {
                const currentDate = new Date();
                const timeDiff = endDate - currentDate;

                if (timeDiff <= 0) {
                    timerElement.innerText = 'オークション終了';
                    clearInterval(this);
                    return;
                }

                const daysDiff = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
                const hoursDiff = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutesDiff = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
                const secondsDiff = Math.floor((timeDiff % (1000 * 60)) / 1000);

                timerElement.innerText = `${daysDiff}日 ${hoursDiff}時間 ${minutesDiff}分 ${secondsDiff}秒`;
            }, 1000);
        }

        window.onload = () => {
            const endTime = "<%= end_datetime %>";
            updateTimeRemaining(endTime);
        };
    </script>
</head>
<body class="bg-gray-100">
    <%- include('partials/header') %>

    <main class="container mx-auto p-4">
        <% if (carDetails) { %>
        <div class="bg-white p-4 rounded shadow">
            <!-- 車データの表示 -->
                <div class="flex flex-col md:flex-row items-center justify-center text-center space-y-4 md:space-y-0 md:space-x-4">
                    <img src="<%= carDetails.car_image %>" alt="<%= carDetails.car_type %>" class="w-112 h-96 object-cover rounded-lg shadow-md">
                    <div class="block">
                        <table class="table-auto border-collapse">
                            <tbody>
                                <tr>
                                    <td class="border px-4 py-2 font-semibold text-xl bg-gray-800 text-white">車種</td>
                                    <td class="border px-32 py-2"><%= carDetails.car_type %></td>
                                </tr>
                                <tr>
                                    <td class="border px-4 py-2 font-semibold text-xl bg-gray-800 text-white">メーカー</td>
                                    <td class="border px-4 py-2"><%= carDetails.car_manufacturer %></td>
                                </tr>
                                <tr>
                                    <td class="border px-4 py-2 font-semibold text-xl bg-gray-800 text-white">年数</td>
                                    <td class="border px-4 py-2"><%= carDetails.car_year %>年</td>
                                </tr>
                                <tr>
                                    <td class="border px-4 py-2 font-semibold text-xl bg-gray-800 text-white">走行距離</td>
                                    <td class="border px-4 py-2"><%= carDetails.car_mileage %> km</td>
                                </tr>
                                <tr>
                                    <td class="border px-4 py-2 font-semibold text-xl bg-gray-800 text-white">色</td>
                                    <td class="border px-4 py-2"><%= carDetails.car_color %></td>
                                </tr>
                            </tbody>
                        </table>
                        <form action="/submit-bid" method="get" class="mt-4">
                            <div class="mb-4">
                                <label for="bidAmount" class="block text-gray-700 mb-2">入札額:</label>
                                <div class="flex items-center justify-center space-x-2">
                                    <button type="button" onclick="decrementValue('bidAmount', 10000)" class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-900">-10000</button>
                                    <input type="number" id="bidAmount" name="bidAmount" class="w-full px-4 py-2 border rounded text-center" min="<%= current_price %>" value="<%= current_price %>" required>
                                    <button type="button" onclick="incrementValue('bidAmount', 10000)" class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-900">+10000</button>
                                </div>
                            </div>
                            <input type="hidden" name="auction_id" value="<%= auction_id %>">
                            <input type="hidden" name="car_id" value="<%= car_id %>">
                            <div class="flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="h-4 w-4"><path d="M464 256A208 208 0 1 1 48 256a208 208 0 1 1 416 0zM0 256a256 256 0 1 0 512 0A256 256 0 1 0 0 256zM232 120l0 136c0 8 4 15.5 10.7 20l96 64c11 7.4 25.9 4.4 33.3-6.7s4.4-25.9-6.7-33.3L280 243.2 280 120c0-13.3-10.7-24-24-24s-24 10.7-24 24z"/></svg>
                                <p>残り時間:</p>
                                <p id="timeRemaining" class="pr-4"><%= time_remaining %></p>
                                <button type="submit" class="bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded">入札する</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </main>
    <%- include('partials/footer') %>
</body>
</html>
