<!-- admin-sidebar.ejs -->
<link rel="stylesheet" href="/css/sidebar.css">
<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
        <h1><img src="/resources/透過ロゴ.png" alt="" style="height: 40px;"></h1>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a href="/" class="nav-link <%= currentPath === '/' ? 'active' : 'text-dark' %>" aria-current="page">ホーム</a>
        </li>
        <li>
            <a href="/carManagement" class="nav-link <%= currentPath === '/carManagement' ? 'active' : 'text-dark' %>">車両管理</a>
        </li>
        <li>
            <a href="/car-listing" class="nav-link <%= currentPath === '/car-listing' ? 'active' : 'text-dark' %>">出品管理</a>
        </li>
        <li>
            <a href="/auctionManagement" class="nav-link <%= currentPath === '/auctionManagement' ? 'active' : 'text-dark' %>">オークション登録</a>
        </li>
    </ul>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const currentPath = window.location.pathname;

        // 現在のページに応じてリンクにクラスを追加
        const links = document.querySelectorAll('.nav-link');
        links.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    });
</script>

<style>
    .nav-link.active {
        background-color: #007bff; /* アクティブなリンクの背景色 */
        color: white; /* アクティブなリンクの文字色 */
    }
</style>